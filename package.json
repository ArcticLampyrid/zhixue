{
    "name": "zhixue",
    "version": "1.3.1",
    "main": "./dist/server/main.js",
    "scripts": {
        "build": "tsc",
        "start": "npm run build && electron ./dist/server/main.js",
        "dist": "npm run build && electron-builder --win --linux --ia32 --x64 --publish never",
        "publish": "npm run build && electron-builder --win --linux --ia32 --x64 --publish always"
    },
    "author": {
        "name": "alampy",
        "email": "ArcticLampyrid@outlook.com"
    },
    "build": {
        "files": [
            "!src/**/*.ts"
        ],
        "appId": "tk.qiqiworld.zhixue",
        "productName": "智学网",
        "directories": {
            "output": "OutApp"
        },
        "nsis": {
            "language": 2052
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "linux": {
            "target": [
                "AppImage"
            ]
        },
        "publish": [
            "github"
        ]
    },
    "repository": "https://github.com/ArcticLampyrid/zhixue",
    "license": "MIT",
    "keywords": [
        "zhixue"
    ],
    "dependencies": {
        "bootstrap": "^5.2.3",
        "chart.js": "^4.2.0",
        "chartjs-plugin-datalabels": "^2.2.0",
        "custom-electron-titlebar": "^4.1.6",
        "electron-updater": "^5.3.0",
        "https-proxy-agent": "^5.0.1",
        "jquery": "^3.6.3",
        "node-fetch": "^2.6.9",
        "sugar": "^2.0.6",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/bootstrap": "^5.2.6",
        "@types/chart.js": "^2.9.37",
        "@types/jquery": "^3.5.16",
        "@types/node": "^18.11.19",
        "@types/node-fetch": "^2.6.2",
        "@types/uuid": "^9.0.0",
        "electron": "^22.2.0",
        "electron-builder": "^23.6.0",
        "typescript": "^4.9.5"
    }
}
